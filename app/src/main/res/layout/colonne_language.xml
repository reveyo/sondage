<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bleuClair"
    android:padding="10dp">

    <ImageView
        android:id="@+id/languageicon"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:paddingTop="-10dp"
        android:paddingLeft="-10dp"
        android:src="@drawable/python50"
        tools:background="#A00"
        />

    <TextView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/languageicon"
        android:layout_alignTop="@+id/languageicon"
        android:textStyle="bold"
        android:textSize="22dp"
        tools:text="Language"
        />

    <CheckBox
        android:id="@+id/selectionne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/language"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_toRightOf="@+id/languageicon"
        android:layout_below="@+id/language"
        android:layout_marginLeft="10dp"
        tools:text="detail"
        />

</RelativeLayout>